<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/topLay"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#009688">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/title"
            android:padding="16dp"
            android:src="@drawable/back"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/backBtn"
            android:layout_toRightOf="@id/backBtn"
            android:contentDescription="@string/title"

            android:src="@drawable/user"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/userImage"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/userImage">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="online"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/vert"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:tint="@color/white"
            android:src="@drawable/vert" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/vert"
            android:tint="@color/white"
            app:srcCompat="@drawable/call" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLay"
        android:layout_below="@id/topLay"
        android:layout_margin="10dp"></androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/bottomLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        >

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="304dp"
            android:layout_height="47dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toStartOf="@+id/floatBtn"
            android:layout_toLeftOf="@+id/floatBtn"
            android:background="@drawable/rounded"
            android:drawableLeft="@drawable/emoji"
            android:drawablePadding="5dp"
            android:hint="Enter a message"
            android:paddingLeft="16dp"
            android:textColorHint="@color/black" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            app:backgroundTint="#009688"
            app:tint="@color/white"
            app:srcCompat = "@drawable/ic_baseline_mic_24"
            />



    </RelativeLayout>


</RelativeLayout>