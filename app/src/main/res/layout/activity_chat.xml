<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:id="@+id/chatActivity"
    >


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLay"

        android:layout_margin="10dp"></androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/bottomLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSendImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/img"
            android:layout_alignParentLeft="true"
            android:tint="?attr/colorPrimaryDark"
            android:backgroundTint="#009688"
            app:fabSize="mini"

            ></com.google.android.material.floatingactionbutton.FloatingActionButton>

        <EditText
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/fabSendImg"
            android:layout_toRightOf="@id/fabSendImg"
            android:elevation="2dp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Fire your message"
            android:background="@drawable/rect_oval_white"
            android:layout_marginRight="8dp"></EditText>
        <ImageView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_send_24"
            android:elevation="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"

            app:tint="@color/black"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"></ImageView>







    </RelativeLayout>


</RelativeLayout>




