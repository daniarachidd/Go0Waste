<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">





        <TextView
            android:id="@+id/show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="8dp"
            android:text="Hello"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:background="@drawable/background_message_right"

            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@id/chatUserImage"
            android:layout_marginRight="5dp" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00"
            android:id="@+id/displaytime"
            android:visibility="gone"
            android:textStyle="italic"
            android:layout_marginTop="18dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/show_message"/>


       <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/chatUserImage"
           android:layout_width="40dp"
           android:layout_height="40dp"
               android:layout_alignParentEnd="true"
            android:src="@drawable/user"
           android:layout_marginEnd="5dp"
           android:layout_alignBottom="@id/show_message"
           android:layout_alignParentRight="true"
           android:padding="5dp"
           android:layout_marginRight="5dp" />









</RelativeLayout>