                android:text="5"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:text="2"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
