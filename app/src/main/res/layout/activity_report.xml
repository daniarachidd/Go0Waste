<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Report">

    <RelativeLayout
        android:id="@+id/topLay"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#009688">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/title"
            android:padding="16dp"
            android:src="@drawable/back"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_toRightOf="@id/backBtn"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/topLay">

        <TextView
            android:layout_marginLeft="12dp"
            android:id="@+id/textReportType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Report Type"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_below="@id/topLay"/>
        <Spinner
            android:id="@+id/spinCategory"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_toRightOf="@id/textReportType"
            android:layout_height="47dp"

            app:layout_constraintStart_toEndOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/txtQuantity" />
    </LinearLayout>




    <TableLayout
        android:id="@+id/tableLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLay"
        android:layout_margin="5dp"
        android:background="@color/white">


    <TableRow android:background="#009688"
        android:layout_width="500dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="No"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />
        <TextView
            android:text="Category"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginLeft="12dp" />
        <TextView
            android:text="Donated items"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp" />
        <TextView
            android:text="Cancelled Donations"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"/>
    </TableRow>
        <TableRow android:background="#c8dbd9">

            <TextView

                android:layout_marginLeft="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="14dp" />
            <TextView
                android:text="Women Clothes"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:textSize="14dp"/>
            <TextView
                android:text="100"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:text="10"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"/>
        </TableRow>
        <TableRow android:background="#c8dbd9">

            <TextView

